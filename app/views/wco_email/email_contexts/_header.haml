
- ctxs = @ctxs || WcoEmail::Context.all

.a
  = link_to email_contexts_path({ sent: false }) do
    Email Contexts (#{ctxs.length})
    - if @lead
      For lead #{@lead.email}
- if my_truthy? params[:sent]
  = link_to '[notsent]', email_contexts_path({ sent: false })
  <b>sent</b>
- else
  <b>notsent</b>
  = link_to '[sent]', email_contexts_path({ sent: true })
= form_tag email_contexts_path, method: :get do
  = text_field_tag :q
= link_to '[+]', new_email_context_path
-# = link_to '[sent]', email_contexts_path({ sent: true })
= link_to '[summary]', email_contexts_summary_path( format: :html )
= link_to '[csv]', email_contexts_summary_path( format: :csv )


