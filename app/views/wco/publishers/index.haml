
.publishers-index.padded
  %h5
    Publishers
    = link_to '[+]', new_publisher_path

  %table.bordered
    %tr
      %th &nbsp;
      %th name
      %th
        context_eval
        %br
        post_body_eval
    - @publishers.each do |item|
      %tr
        %td
          .flex-row
            = button_to '[x]', publisher_path(item), method: :delete, data: { confirm: 'Are you sure?' }
            = link_to '[~]', edit_publisher_path(item)
            = button_to '[run]', do_run_publisher_path( item ), data: { confirm: 'Are you sure?' }
        %td= item.name
        %td
          %pre.monospace
            = item.context_eval
          %hr
          %pre.monospace
            = item.post_body_tmpl
